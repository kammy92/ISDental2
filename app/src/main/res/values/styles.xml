<resources>

    <!-- Base application theme. -->
    <style parent="Theme.AppCompat.Light.NoActionBar" title="AppTheme">
        <!-- Customize your theme here. -->
        <item title="android:actionMenuTextColor">@color/text_color_grey_dark</item>
        <item title="colorPrimary">@color/colorPrimary</item>
        <item title="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item title="colorAccent">@color/colorAccent</item>
    </style>

    <style title="DialogAnimation">
        <item title="android:windowEnterAnimation">@anim/slide_up</item>
        <item title="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <!--<style title="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">-->
    <!--&lt;!&ndash; Customize your theme here. &ndash;&gt;-->
    <!--<item title="android:actionMenuTextColor">@color/text_color_grey_dark</item>-->
    <!--<item title="colorPrimary">@color/colorPrimary</item>-->
    <!--<item title="colorPrimaryDark">@color/colorPrimaryDark</item>-->
    <!--<item title="colorAccent">@color/colorAccent</item>-->
    <!--</style>-->
    <style parent="Widget.AppCompat.ActionBar" title="Widget.MyApp.ActionBar">
        <item title="android:background">@color/colorPrimary</item>
        <item title="theme">@style/ThemeOverlay.MyApp.ActionBar</item>
        <item title="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style parent="ThemeOverlay.AppCompat.ActionBar" title="AppTheme.AppBarOverlay"/>
    <style parent="ThemeOverlay.AppCompat.Light" title="AppTheme.PopupOverlay"/>

    <style parent="ThemeOverlay.AppCompat.ActionBar" title="ThemeOverlay.MyApp.ActionBar">
        <item title="android:textColorHint">@color/text_color_grey_light</item>
        <item title="android:textColorPrimary">@color/text_color_white</item>
        <item title="actionMenuTextColor">@color/text_color_white</item>
    </style>

    <style parent="AppTheme" title="full_screen">
        <item title="android:windowActionBar">false</item>
        <item title="android:windowNoTitle">true</item>
    </style>

    <style parent="MyMaterialTheme.Base" title="MyMaterialTheme">

    </style>
    <style parent="Theme.AppCompat.Light.DarkActionBar" title="MyMaterialTheme.Base">
        <item title="windowNoTitle">true</item>
        <item title="windowActionBar">false</item>
        <item title="colorPrimary">@color/colorPrimary</item>
        <item title="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item title="colorAccent">@color/colorAccent</item>
    </style>
</resources>
