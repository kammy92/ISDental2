<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tvAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/button_background"
        android:paddingBottom="@dimen/activity_margin_extra_small"
        android:paddingLeft="@dimen/activity_margin_small"
        android:paddingRight="@dimen/activity_margin_small"
        android:paddingTop="@dimen/activity_margin_extra_small"
        android:text="INQUIRE"
        android:textColor="@color/accent2"
        android:textSize="@dimen/text_size_small"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/tvAdd"
        android:layout_toStartOf="@+id/tvAdd"
        android:paddingRight="@dimen/activity_margin">

        <TextView
            android:id="@+id/tvProductName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Name1"
            android:textColor="@color/primary_text2"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tvProductDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tvProductName"
            android:text="Description"
            android:textColor="@color/secondary_text2"
            android:textSize="@dimen/text_size_extra_small"/>
        <TextView
            android:id="@+id/tvProductPackaging"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tvProductDescription"
            android:text="Packaging"
            android:textColor="@color/secondary_text2"
            android:textSize="@dimen/text_size_extra_small"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/tvProductPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tvProductPackaging"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/activity_margin_extra_small"
            android:text="Rs 14,599/-"
            android:textColor="@color/primary_text2"
            android:textSize="@dimen/text_size_extra_small"
            android:textStyle="bold"/>
    </RelativeLayout>
</RelativeLayout>