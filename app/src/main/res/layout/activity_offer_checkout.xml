<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/clMain"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@color/text_color_white">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:background="@color/text_color_white"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:visibility="visible"
        app:elevation="0dp"
        app:layout_scrollFlags="scroll|exitUntilCollapsed">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar1"
            style="@style/Widget.MyApp.ActionBar"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true"
            android:background="@color/app_background2"
            android:theme="@style/Base.ThemeOverlay.AppCompat.Dark"
            app:contentInsetEnd="0dp"
            app:contentInsetLeft="0dp"
            app:contentInsetRight="0dp"
            app:contentInsetStart="0dp"
            app:layout_collapseMode="parallax">
            <RelativeLayout
                android:id="@+id/toolbar_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:animateLayoutChanges="true"
                android:gravity="center_vertical">
                <RelativeLayout
                    android:id="@+id/rlToolbar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:visibility="visible">
                    <TextView
                        android:id="@+id/tvSearch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/llButtons"
                        android:layout_toStartOf="@+id/llButtons"
                        android:gravity="center"
                        android:paddingEnd="@dimen/activity_margin"
                        android:paddingLeft="@dimen/activity_margin"
                        android:paddingRight="@dimen/activity_margin"
                        android:paddingStart="@dimen/activity_margin"
                        android:text="CART SCREEN"
                        android:textColor="@color/primary_text2"
                        android:textSize="@dimen/text_size_large"
                        android:textStyle="bold"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rlSearch"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:animateLayoutChanges="true"
                    android:background="@color/text_color_white"
                    android:visibility="gone">
                    <ImageView
                        android:id="@+id/ivBack"
                        android:layout_width="?attr/actionBarSize"
                        android:layout_height="?attr/actionBarSize"
                        android:padding="@dimen/activity_margin"
                        android:src="@drawable/ic_arrow_back"/>
                    <EditText
                        android:id="@+id/etSearch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/ivBack"
                        android:layout_toLeftOf="@+id/ivCancel"
                        android:layout_toRightOf="@+id/ivBack"
                        android:layout_toStartOf="@+id/ivCancel"
                        android:background="@null"
                        android:hint="Search Company"
                        android:inputType="textNoSuggestions"
                        android:textColor="@color/primary_text2"
                        android:textSize="@dimen/text_size_medium"
                        android:textStyle="bold"/>
                    <ImageView
                        android:id="@+id/ivCancel"
                        android:layout_width="?attr/actionBarSize"
                        android:layout_height="?attr/actionBarSize"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:padding="@dimen/activity_margin"
                        android:src="@drawable/ic_close"
                        android:visibility="gone"/>
                </RelativeLayout>
            </RelativeLayout>

        </android.support.v7.widget.Toolbar>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/text_color_grey_light2"/>
    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
    >
        <TextView
            android:id="@+id/tvClaim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_margin"
            android:text="You have Claimed"

        />

        <TextView
            android:id="@+id/tvProductName"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignLeft="@+id/tvClaim"
            android:layout_alignStart="@+id/tvClaim"
            android:layout_below="@+id/tvClaim"
            android:text="Product Name"/>

        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvClaim"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:weightSum="3"
        >


            <ImageView
                android:id="@+id/ivPlus"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:src="@drawable/ic_plus"
            />

            <TextView
                android:layout_width="20dp"
                android:layout_height="15dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="1"
            />

            <ImageView
                android:id="@+id/ivMinus"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:src="@drawable/ic_minus"
            />

        </LinearLayout>


        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/ll1"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:text="Price"/>


        <TextView
            android:id="@+id/tvChooseAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvProductName"
            android:layout_marginLeft="@dimen/activity_margin"
            android:layout_marginTop="16dp"
            android:text="Choose Delivery Address"
            android:textSize="@dimen/text_size_medium"


        />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvDeliveryAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tvAddNewAddress"
            android:layout_below="@+id/tvChooseAddress"
            android:clipToPadding="false"
            android:fillViewport="true"
            android:overScrollMode="never"
            android:scrollbarStyle="insideOverlay"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"/>


        <TextView
            android:id="@+id/tvAddNewAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/activity_margin"
            android:background="@color/text_color_black"
            android:gravity="center"
            android:padding="@dimen/activity_margin"
            android:text="Add New Address"
            android:textColor="@color/text_color_white"
            android:textSize="@dimen/text_size_medium"
            android:textStyle="bold"
        />

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>