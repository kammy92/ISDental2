<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_toLeftOf="@+id/rl2"
        android:paddingEnd="0dp"
        android:paddingRight="0dp">


        <TextView
            android:id="@+id/tvCommentsFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginRight="5dp"
            android:text="You "
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/text_size_small"
            android:visibility="visible"
        />


        <TextView
            android:id="@+id/tvCommentDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@+id/tvCommentsFrom"
            android:text="REQ.DATE- 20/11/2017"
            android:textColor="@color/secondary_text2"
            android:textSize="@dimen/text_size_small"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/tvCommentText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tvCommentDate"
            android:text="dsfsdf efdsfdsf sdfdsf dsff"
            android:textColor="@color/secondary_text2"
            android:textSize="@dimen/text_size_small"
            android:visibility="visible"/>
    </RelativeLayout>


</RelativeLayout>