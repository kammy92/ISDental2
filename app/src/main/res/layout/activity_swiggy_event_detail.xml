<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/clMain"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="#ffffff">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:visibility="visible"
        app:elevation="0dp">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar1"
            style="@style/Widget.MyApp.ActionBar"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:background="#ffffff"
            android:theme="@style/Base.ThemeOverlay.AppCompat.Dark"
            app:contentInsetEnd="0dp"
            app:contentInsetLeft="0dp"
            app:contentInsetRight="0dp"
            app:contentInsetStart="0dp"
            app:layout_collapseMode="parallax">

            <RelativeLayout
                android:id="@+id/toolbar_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/rlBack"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="@dimen/activity_margin"
                        android:src="@drawable/ic_arrow_back"
                        android:textColor="@color/text_color_grey_dark2"
                        android:visibility="visible"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rlTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/rlBack"
                    android:layout_toRightOf="@+id/rlBack"
                    android:visibility="visible">
                    <TextView
                        android:id="@+id/tvTitleEventName"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:ellipsize="end"
                        android:lines="1"
                        android:maxLines="1"
                        android:text=""
                        android:textColor="@color/primary_text2"
                        android:textSize="@dimen/text_size_extra_large"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/tvTitleEventDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/tvTitleEventName"
                        android:ellipsize="end"
                        android:lines="1"
                        android:maxLines="1"
                        android:text=""
                        android:textColor="@color/secondary_text2"
                        android:textSize="@dimen/text_size_small"/>
                </RelativeLayout>
            </RelativeLayout>
        </android.support.v7.widget.Toolbar>
        <View
            android:id="@+id/v1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/text_color_grey_light2"
            android:visibility="visible"/>
    </android.support.design.widget.AppBarLayout>
    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/appBar"
        android:descendantFocusability="blocksDescendants"
        android:overScrollMode="never"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <RelativeLayout
            android:id="@+id/rlMain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvEventItems"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"/>
        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>
    <RelativeLayout
        android:id="@+id/rlNoResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:animateLayoutChanges="true"
        android:visibility="gone"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <ImageView
            android:id="@+id/ivNoResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_no_internet"/>
        <TextView
            android:id="@+id/tvNoResultTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivNoResult"
            android:layout_marginTop="@dimen/activity_margin"
            android:gravity="center"
            android:padding="@dimen/edittext_padding"
            android:textColor="@color/primary_text2"
            android:textSize="@dimen/text_size_extra_large"
            android:textStyle="bold"
            android:visibility="visible"/>
        <TextView
            android:id="@+id/tvNoResultDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvNoResultTitle"
            android:gravity="center"
            android:paddingLeft="@dimen/activity_margin"
            android:paddingRight="@dimen/activity_margin"
            android:textColor="@color/secondary_text2"
            android:textSize="@dimen/text_size_medium"/>
        <TextView
            android:id="@+id/tvNoResultButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvNoResultDescription"
            android:gravity="center"
            android:padding="@dimen/activity_margin"
            android:text="RETRY"
            android:textColor="@color/accent2"
            android:textSize="@dimen/text_size_extra_large"
            android:textStyle="bold"/>
    </RelativeLayout>
    <com.indiasupply.isdental.utils.ShimmerFrameLayout
        android:id="@+id/shimmer_view_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/rll1"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize">
                <View
                    android:id="@+id/ivl1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/activity_margin"
                    android:visibility="invisible"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/ivl1"
                    android:layout_toRightOf="@+id/ivl1">
                    <TextView
                        android:id="@+id/tvView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/shimmer_bg_color"
                        android:ellipsize="end"
                        android:lines="1"
                        android:maxLines="1"
                        android:text="                      "
                        android:textColor="@color/primary_text2"
                        android:textSize="@dimen/text_size_large"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/tvView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvView1"
                        android:layout_marginTop="@dimen/activity_margin_extra_small"
                        android:background="@color/shimmer_bg_color"
                        android:ellipsize="end"
                        android:lines="1"
                        android:maxLines="1"
                        android:text="                                     "
                        android:textColor="@color/secondary_text2"
                        android:textSize="@dimen/text_size_small"/>
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rlLoading"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/rll1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_margin"
                        android:layout_marginRight="@dimen/activity_margin"
                        android:layout_marginTop="@dimen/activity_margin"
                        android:orientation="horizontal"
                        android:weightSum="2">
                        <RelativeLayout
                            xmlns:android="http://schemas.android.com/apk/res/android"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/activity_margin_small"
                            android:layout_weight="1"
                            android:background="@color/shimmer_bg_color"
                            android:orientation="vertical">
                            <RelativeLayout
                                android:id="@+id/rl1"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_centerHorizontal="true"
                                android:layout_margin="@dimen/activity_margin">
                            </RelativeLayout>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/rl1"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:lines="2"
                                android:maxLines="2"
                                android:padding="@dimen/activity_margin_extra_small"
                                android:textColor="@color/primary_text2"
                                android:textSize="@dimen/text_size_extra_small"/>
                        </RelativeLayout>
                        <RelativeLayout
                            xmlns:android="http://schemas.android.com/apk/res/android"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/activity_margin_small"
                            android:layout_weight="1"
                            android:background="@color/shimmer_bg_color"
                            android:orientation="vertical">
                            <RelativeLayout
                                android:id="@+id/rl11"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_centerHorizontal="true"
                                android:layout_margin="@dimen/activity_margin">
                            </RelativeLayout>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/rl11"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:lines="2"
                                android:maxLines="2"
                                android:padding="@dimen/activity_margin_extra_small"
                                android:textColor="@color/primary_text2"
                                android:textSize="@dimen/text_size_extra_small"/>
                        </RelativeLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_margin"
                        android:layout_marginRight="@dimen/activity_margin"
                        android:layout_marginTop="@dimen/activity_margin"
                        android:orientation="horizontal"
                        android:weightSum="2">
                        <RelativeLayout
                            xmlns:android="http://schemas.android.com/apk/res/android"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/activity_margin_small"
                            android:layout_weight="1"
                            android:background="@color/shimmer_bg_color"
                            android:orientation="vertical">
                            <RelativeLayout
                                android:id="@+id/rl12"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_centerHorizontal="true"
                                android:layout_margin="@dimen/activity_margin">
                            </RelativeLayout>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/rl12"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:lines="2"
                                android:maxLines="2"
                                android:padding="@dimen/activity_margin_extra_small"
                                android:textColor="@color/primary_text2"
                                android:textSize="@dimen/text_size_extra_small"/>
                        </RelativeLayout>
                        <RelativeLayout
                            xmlns:android="http://schemas.android.com/apk/res/android"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/activity_margin_small"
                            android:layout_weight="1"
                            android:background="@color/shimmer_bg_color"
                            android:orientation="vertical">
                            <RelativeLayout
                                android:id="@+id/rl111"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_centerHorizontal="true"
                                android:layout_margin="@dimen/activity_margin">
                            </RelativeLayout>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/rl111"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:lines="2"
                                android:maxLines="2"
                                android:padding="@dimen/activity_margin_extra_small"
                                android:textColor="@color/primary_text2"
                                android:textSize="@dimen/text_size_extra_small"/>
                        </RelativeLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_margin"
                        android:layout_marginRight="@dimen/activity_margin"
                        android:layout_marginTop="@dimen/activity_margin"
                        android:orientation="horizontal"
                        android:weightSum="2">
                        <RelativeLayout
                            xmlns:android="http://schemas.android.com/apk/res/android"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/activity_margin_small"
                            android:layout_weight="1"
                            android:background="@color/shimmer_bg_color"
                            android:orientation="vertical">
                            <RelativeLayout
                                android:id="@+id/rl14"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_centerHorizontal="true"
                                android:layout_margin="@dimen/activity_margin">
                            </RelativeLayout>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/rl14"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:lines="2"
                                android:maxLines="2"
                                android:padding="@dimen/activity_margin_extra_small"
                                android:textColor="@color/primary_text2"
                                android:textSize="@dimen/text_size_extra_small"/>
                        </RelativeLayout>
                        <RelativeLayout
                            xmlns:android="http://schemas.android.com/apk/res/android"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/activity_margin_small"
                            android:layout_weight="1"
                            android:background="@color/shimmer_bg_color"
                            android:orientation="vertical">
                            <RelativeLayout
                                android:id="@+id/rl113"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_centerHorizontal="true"
                                android:layout_margin="@dimen/activity_margin">
                            </RelativeLayout>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/rl113"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:lines="2"
                                android:maxLines="2"
                                android:padding="@dimen/activity_margin_extra_small"
                                android:textColor="@color/primary_text2"
                                android:textSize="@dimen/text_size_extra_small"/>
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </com.indiasupply.isdental.utils.ShimmerFrameLayout>
</android.support.design.widget.CoordinatorLayout>