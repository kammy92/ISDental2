<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/clMain"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/text_color_white">
        <ImageView
            android:id="@+id/ivCancel"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize"
            android:padding="@dimen/activity_margin"
            android:src="@drawable/ic_arrow_back"/>
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/ivCancel"
            android:layout_alignTop="@+id/ivCancel"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="DETAILS"
            android:textColor="@color/primary_text2"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold"/>
        <View
            android:id="@+id/v1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/ivCancel"
            android:background="@color/text_color_grey_light2"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/tvSendEnquiry"
            android:layout_below="@+id/v1"
            android:overScrollMode="never"
            android:scrollbars="none">
            <RelativeLayout
                android:id="@+id/rl11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_margin">

                <RelativeLayout
                    android:id="@+id/rl5"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/rlImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center_vertical">
                        <ProgressBar
                            android:id="@+id/progressBar"
                            style="?android:attr/progressBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:visibility="visible"/>
                        <ImageView
                            android:id="@+id/ivOfferImage"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_centerInParent="true"
                            android:scaleType="centerCrop"/>
                        <TextView
                            android:id="@+id/tvOfferPercentage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignEnd="@+id/ivOfferImage"
                            android:layout_alignRight="@+id/ivOfferImage"
                            android:layout_alignTop="@+id/ivOfferImage"
                            android:layout_margin="@dimen/activity_margin_extra_small"
                            android:background="@drawable/offer_perc_background"
                            android:gravity="center"
                            android:padding="2dp"
                            android:text="18% off"
                            android:textColor="@color/text_color_white"
                            android:textSize="@dimen/text_size_extreme_small"
                        />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/rl2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_toLeftOf="@+id/rlImage"
                        android:layout_toStartOf="@+id/rlImage"
                    >
                        <TextView
                            android:id="@+id/tvOfferName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:text="Chesa Dental"
                            android:textColor="@color/primary_text2"
                            android:textSize="@dimen/text_size_medium"
                            android:textStyle="bold"
                            android:visibility="visible"/>
                        <TextView
                            android:id="@+id/tvOfferPackaging"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvOfferName"
                            android:text="Packaging"
                            android:textColor="@color/secondary_text2"
                            android:textSize="@dimen/text_size_small"
                            android:visibility="visible"/>
                        <RelativeLayout
                            android:id="@+id/rlOfferDescription"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvOfferPackaging"
                            android:paddingBottom="@dimen/activity_margin_small"
                            android:paddingTop="@dimen/activity_margin_small"
                            android:visibility="gone">

                            <ImageView
                                android:id="@+id/iv1"
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:layout_centerVertical="true"
                                android:src="@drawable/ic_offers"

                            />
                            <TextView
                                android:id="@+id/tvOfferDescription"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@+id/iv1"
                                android:layout_toRightOf="@+id/iv1"
                                android:gravity="center_vertical"
                                android:paddingLeft="@dimen/activity_margin_extra_small"
                                android:paddingStart="@dimen/activity_margin_extra_small"
                                android:text="Description"
                                android:textColor="#9F7A6D"
                                android:textSize="@dimen/text_size_small"
                                android:visibility="visible"/>
                        </RelativeLayout>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/rl1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/rl2"
                        android:layout_marginTop="@dimen/activity_margin">
                        <TableLayout
                            android:id="@+id/tlPrice"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                        >
                            <TableRow>
                                <TextView
                                    android:text="Offer Price "
                                    android:textColor="@color/primary_text2"
                                    android:textSize="@dimen/text_size_small"
                                    android:textStyle="bold"/>
                                <TextView
                                    android:id="@+id/tvOfferPrice"
                                    android:layout_marginLeft="@dimen/activity_margin"
                                    android:text="Rs 400"
                                    android:textColor="@color/primary_text2"
                                    android:textSize="@dimen/text_size_small"
                                    android:textStyle="bold"/>
                            </TableRow>
                            <TableRow>
                                <TextView
                                    android:text="MRP"
                                    android:textColor="@color/secondary_text2"
                                    android:textSize="@dimen/text_size_small"
                                />
                                <TextView
                                    android:id="@+id/tvOfferMRP"
                                    android:layout_marginLeft="@dimen/activity_margin"
                                    android:text="Rs 400"
                                    android:textColor="@color/secondary_text2"
                                    android:textSize="@dimen/text_size_small"/>
                            </TableRow>

                            <TableRow>
                                <TextView
                                    android:text="Regular Price"
                                    android:textColor="@color/secondary_text2"
                                    android:textSize="@dimen/text_size_small"
                                />
                                <TextView
                                    android:id="@+id/tvOfferRegularPrice"
                                    android:layout_marginLeft="@dimen/activity_margin"
                                    android:text="Rs 400"
                                    android:textColor="@color/secondary_text2"
                                    android:textSize="@dimen/text_size_small"/>
                            </TableRow>
                            <TableRow>
                                <TextView
                                    android:text="Total Savings"
                                    android:textColor="@color/secondary_text2"
                                    android:textSize="@dimen/text_size_small"
                                />
                                <TextView
                                    android:id="@+id/tvOfferSaving"
                                    android:layout_marginLeft="@dimen/activity_margin"
                                    android:text="Rs 400"
                                    android:textColor="@color/secondary_text2"
                                    android:textSize="@dimen/text_size_small"/>
                            </TableRow>
                        </TableLayout>
                    </RelativeLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl5"
                    android:layout_marginTop="@dimen/activity_margin">
                    <TextView
                        android:id="@+id/tvOfferDateText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Offer Dates"
                        android:textColor="@color/primary_text2"
                        android:textSize="@dimen/text_size_small"/>
                    <org.sufficientlysecure.htmltextview.HtmlTextView
                        android:id="@+id/tvOfferDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvOfferDateText"
                        android:text="asfhakfdsjahkdsafhsdakhdsahkjhkjhsdfkhfskadkdjfhj"
                        android:textColor="@color/secondary_text2"
                        android:textSize="@dimen/text_size_small"/>
                    <TextView
                        android:id="@+id/tvDetailsText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvOfferDate"
                        android:text="Details"
                        android:textColor="@color/primary_text2"
                        android:textSize="@dimen/text_size_small"/>
                    <org.sufficientlysecure.htmltextview.HtmlTextView
                        android:id="@+id/tvDetails"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvDetailsText"
                        android:text="asfhakfdsjahkdsafhsdakfhkjhsdfkhfskadkdjfhj"
                        android:textColor="@color/secondary_text2"
                        android:textSize="@dimen/text_size_small"/>
                    <TextView
                        android:id="@+id/tvTermsAndConditionsText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvDetails"
                        android:text="Terms And Conditions"
                        android:textColor="@color/primary_text2"
                        android:textSize="@dimen/text_size_small"/>
                    <org.sufficientlysecure.htmltextview.HtmlTextView
                        android:id="@+id/tvTermsAndConditions"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvTermsAndConditionsText"
                        android:text="asfhakfdsjahkdsafhsdakfhdsahkjhkjhsdfkhfskadkdjfhj"

                        android:textColor="@color/secondary_text2"
                        android:textSize="@dimen/text_size_small"/>

                </RelativeLayout>
            </RelativeLayout>
        </ScrollView>

        <TextView
            android:id="@+id/tvSendEnquiry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_alignParentBottom="true"
            android:background="@drawable/button_background_2"
            android:gravity="center"
            android:padding="@dimen/activity_margin"
            android:text="Send Enquiry"
            android:textColor="@color/text_color_white"
            android:textSize="@dimen/text_size_large"
            android:visibility="visible"/>

    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>