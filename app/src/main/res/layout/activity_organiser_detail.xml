<android.support.design.widget.CoordinatorLayout
    android:id="@+id/clMain"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            app:contentScrim="?attr/colorPrimary"
            app:layout_collapseMode="parallax"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/details_bg">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/company_detail_footer_bg"/>

                <RelativeLayout
                    android:id="@+id/rl1"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="@dimen/activity_margin"
                    android:layout_marginRight="@dimen/activity_margin"
                    android:background="@drawable/company_details_bg">
                    <TextView
                        android:id="@+id/tvOrganiserName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:gravity="center"
                        android:padding="@dimen/activity_margin_extra_small"
                        android:text=""
                        android:textColor="@color/text_color_black"
                        android:textSize="@dimen/text_size_company_name"
                        android:textStyle="bold"
                        android:visibility="visible"/>

                    <LinearLayout
                        android:id="@+id/llSocialButtons"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/tv1"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="@dimen/activity_margin_small"
                        android:layout_marginTop="@dimen/activity_margin_small"
                        android:gravity="bottom"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        android:weightSum="5">
                        <ImageView
                            android:id="@+id/ivWebsite"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="@dimen/activity_margin_small"
                            android:layout_marginRight="@dimen/activity_margin_small"
                            android:layout_weight="1"
                            android:src="@drawable/ic_website_disabled"
                            android:visibility="visible"/>
                        <ImageView
                            android:id="@+id/ivFacebook"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="@dimen/activity_margin_small"
                            android:layout_marginRight="@dimen/activity_margin_small"
                            android:layout_weight="1"
                            android:src="@drawable/ic_fb_disabled"
                            android:visibility="visible"/>
                        <ImageView
                            android:id="@+id/ivTwitter"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="@dimen/activity_margin_small"
                            android:layout_marginRight="@dimen/activity_margin_small"
                            android:layout_weight="1"
                            android:src="@drawable/ic_twitter_disabled"
                            android:visibility="visible"/>
                        <ImageView
                            android:id="@+id/ivLinkedIn"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="@dimen/activity_margin_small"
                            android:layout_marginRight="@dimen/activity_margin_small"
                            android:layout_weight="1"
                            android:src="@drawable/ic_linkedin_disabled"
                            android:visibility="visible"/>
                        <ImageView
                            android:id="@+id/ivYouTube"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="@dimen/activity_margin_small"
                            android:layout_marginRight="@dimen/activity_margin_small"
                            android:layout_weight="1"
                            android:src="@drawable/ic_youtube_disabled"
                            android:visibility="visible"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tv1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_above="@+id/llOrganiserLinks"
                        android:layout_marginLeft="@dimen/activity_margin"
                        android:layout_marginRight="@dimen/activity_margin"
                        android:background="@color/divider_color"/>
                    <LinearLayout
                        android:id="@+id/llOrganiserLinks"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_alignParentBottom="true"
                        android:orientation="horizontal"
                        android:visibility="visible"
                        android:weightSum="2">

                        <TextView
                            android:id="@+id/tvEventWebsite"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="@dimen/activity_margin_small"
                            android:text="Website"
                            android:textColor="@color/text_color_grey_dark2"
                            android:textSize="@dimen/text_size_medium"
                            android:visibility="visible"/>
                        <TextView
                            android:layout_width="1dp"
                            android:layout_height="wrap_content"
                            android:background="@color/divider_color"/>
                        <TextView
                            android:id="@+id/tvEventOrganisers"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="@dimen/activity_margin_small"
                            android:text="Organiser"
                            android:textColor="@color/text_color_grey_dark2"
                            android:textSize="@dimen/text_size_medium"
                            android:visibility="visible"/>
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                style="@style/Widget.MyApp.ActionBar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:animateLayoutChanges="true"
                android:background="@android:color/transparent"
                android:contentInsetEnd="0dp"
                android:contentInsetLeft="0dp"
                android:contentInsetRight="0dp"
                android:contentInsetStart="0dp"
                android:visibility="visible"
                app:contentInsetEnd="0dp"
                app:contentInsetLeft="0dp"
                app:contentInsetRight="0dp"
                app:contentInsetStart="0dp"
                app:layout_collapseMode="pin">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:id="@+id/rlBack"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/ivBack"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_back"
                            android:visibility="visible"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_toEndOf="@+id/ivBack"
                            android:layout_toRightOf="@+id/ivBack"
                            android:gravity="center_vertical"
                            android:text="@string/activity_brand_list_back_button"
                            android:textColor="@color/text_color_white"
                            android:textSize="@dimen/text_size_large"
                            android:visibility="invisible"/>
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tvTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:text="@string/activity_brand_list_title"
                        android:textColor="@color/text_color_white"
                        android:textSize="@dimen/text_size_large"
                        android:textStyle="bold"
                        android:visibility="gone"/>
                </RelativeLayout>


            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <RelativeLayout
            android:id="@+id/rlMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <TextView
                android:id="@+id/tvContacts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/activity_margin_small"
                android:text="DESCRIPTION"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/text_size_large"
                android:textStyle="bold"/>

            <android.support.v7.widget.CardView
                android:id="@+id/cardView1"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@+id/tvContacts"
                android:layout_margin="@dimen/activity_margin"
                card_view:cardCornerRadius="@dimen/cardview_default_radius"
                card_view:cardElevation="@dimen/cardview_elevation">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:animateLayoutChanges="true"
                    android:orientation="vertical">
                    <WebView
                        android:id="@+id/webViewDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/activity_margin_extra_small"/>
                    <Button
                        android:id="@+id/btShowMore"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:background="@color/text_color_white"
                        android:gravity="center"
                        android:text="SHOW MORE"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/text_size_small"
                        android:textStyle="bold"/>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/tvUpcoming"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cardView1"
                android:gravity="center"
                android:padding="@dimen/activity_margin_small"
                android:text="UPCOMING EVENT"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/text_size_large"
                android:textStyle="bold"/>
            <LinearLayout
                android:id="@+id/llUpcoming"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvUpcoming"
                android:orientation="vertical">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvUpcoming"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_margin">

                </android.support.v7.widget.RecyclerView>

                <TextView
                    android:id="@+id/tvUpcomingNoResultFound"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/activity_margin_small"
                    android:text="NO EVENT FOUND"
                    android:textColor="@color/text_color_black"
                    android:textSize="@dimen/text_size_small"
                    android:visibility="gone"/>


            </LinearLayout>
            <TextView
                android:id="@+id/tvPAST"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/llUpcoming"
                android:gravity="center"
                android:padding="@dimen/activity_margin_small"
                android:text="PAST EVENT"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/text_size_large"
                android:textStyle="bold"/>
            <LinearLayout
                android:id="@+id/llPast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvPAST"
                android:orientation="vertical">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvPast"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_margin">

                </android.support.v7.widget.RecyclerView>

                <TextView
                    android:id="@+id/tvPastNoResultFound"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/llUpcoming"
                    android:gravity="center"
                    android:padding="@dimen/activity_margin_small"
                    android:text="NO EVENT FOUND"
                    android:textColor="@color/text_color_black"
                    android:textSize="@dimen/text_size_small"
                    android:visibility="gone"/>
            </LinearLayout>
        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>