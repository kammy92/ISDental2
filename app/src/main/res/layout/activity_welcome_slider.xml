<android.support.design.widget.CoordinatorLayout
    android:id="@+id/clMain"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:attrs="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true">
        <android.support.v4.view.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/welcome_screen_bottom_padding"
            android:alpha=".5"
            android:background="@android:color/white"/>
        <com.rd.PageIndicatorView
            android:id="@+id/pageIndicatorView"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/welcome_screen_bottom_padding"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            attrs:piv_animationDuration="500"
            attrs:piv_animationType="thinWorm"
            attrs:piv_radius="3dp"
            attrs:piv_selectedColor="@color/text_color_black"
            attrs:piv_strokeWidth="3dp"
            attrs:piv_unselectedColor="@color/text_color_grey_light"
            attrs:piv_viewPager="@id/view_pager"/>

        <Button
            android:id="@+id/btNext"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/welcome_screen_bottom_padding"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:gravity="center"
            android:paddingLeft="@dimen/edittext_padding"
            android:paddingRight="@dimen/edittext_padding"
            android:text="NEXT"
            android:textColor="@color/text_color_grey_dark2"/>
        <Button
            android:id="@+id/btGetStarted"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/welcome_screen_bottom_padding"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:paddingLeft="@dimen/edittext_padding"
            android:paddingRight="@dimen/edittext_padding"
            android:text="GET STARTED"
            android:textColor="@color/text_color_grey_dark2"
            android:visibility="gone"/>
        <Button
            android:id="@+id/btSkip"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/welcome_screen_bottom_padding"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@null"
            android:text="SKIP"
            android:textColor="@color/text_color_grey_dark2"/>
    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>