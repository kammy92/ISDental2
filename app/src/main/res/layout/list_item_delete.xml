<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="2dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true">
        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/ivImage"
                xmlns:app="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:scaleType="fitXY"
                android:visibility="gone"/>
            <com.daimajia.slider.library.SliderLayout
                android:id="@+id/slider"
                xmlns:app="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                app:auto_cycle="true"
                app:pager_animation="Accordion"
                app:pager_animation_span="1000"
                card_view:indicator_visibility="invisible"/>
            <RelativeLayout
                android:id="@+id/rlSliderIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/slider"
                android:layout_centerHorizontal="true"
                android:layout_margin="@dimen/activity_margin"
                android:visibility="gone">
                <TextView
                    android:id="@+id/tvSliderPosition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/activity_margin_extra_small"
                    android:text=""
                    android:textColor="@color/text_color_white"
                    android:textSize="@dimen/text_size_small"
                    android:visibility="visible"/>
            </RelativeLayout>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl1"
            android:background="@color/primary_dark2">
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@+id/tvInfo"
                android:layout_toStartOf="@+id/tvInfo"
                android:padding="@dimen/activity_margin_small"
                android:text="Title"
                android:textColor="@color/text_color_white"/>
            <TextView
                android:id="@+id/tvInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:padding="@dimen/activity_margin_small"
                android:text="Info"
                android:textColor="@color/text_color_white"/>
        </RelativeLayout>


    </RelativeLayout>
</android.support.v7.widget.CardView>