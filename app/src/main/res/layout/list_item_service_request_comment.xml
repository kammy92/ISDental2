<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvCommentsFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You"
            android:textColor="@color/primary_text2"
            android:textSize="@dimen/text_size_extra_small"
            android:visibility="visible"/>
        <TextView
            android:id="@+id/tvCommentDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_margin_extra_small"
            android:layout_marginStart="@dimen/activity_margin_extra_small"
            android:layout_toEndOf="@+id/tvCommentsFrom"
            android:layout_toRightOf="@+id/tvCommentsFrom"
            android:text="20/11/2017"
            android:textColor="@color/secondary_text2"
            android:textSize="@dimen/text_size_extra_small"
            android:visibility="visible"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tvCommentText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl1"
        android:text="dsfsdf efdsfdsaslkd laksdf sdfdsf"
        android:textColor="@color/secondary_text2"

        android:textSize="@dimen/text_size_small"
        android:visibility="visible"/>
</RelativeLayout>