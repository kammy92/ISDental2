<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="visible"/>
        <ImageView
            android:id="@+id/ivProductImage"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tvProductName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/rl1"
        android:layout_alignLeft="@+id/rl1"
        android:layout_alignRight="@+id/rl1"
        android:layout_alignStart="@+id/rl1"
        android:layout_below="@+id/rl1"
        android:layout_marginTop="@dimen/activity_margin_small"
        android:ellipsize="end"
        android:lines="2"
        android:maxLines="2"
        android:text="Name"
        android:textColor="@color/primary_text2"
        android:textSize="@dimen/text_size_small"
        android:textStyle="bold"
    />
    <TextView
        android:id="@+id/tvProductDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/rl1"
        android:layout_alignLeft="@+id/rl1"
        android:layout_alignRight="@+id/rl1"
        android:layout_alignStart="@+id/rl1"
        android:layout_below="@+id/tvProductName"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Description"
        android:textColor="@color/secondary_text2"
        android:textSize="@dimen/text_size_extra_small"/>
    <TextView
        android:id="@+id/tvProductPackaging"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/rl1"
        android:layout_alignLeft="@+id/rl1"
        android:layout_alignRight="@+id/rl1"
        android:layout_alignStart="@+id/rl1"
        android:layout_below="@+id/tvProductDescription"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Name1asd kksad "
        android:textColor="@color/secondary_text2"
        android:textSize="@dimen/text_size_extra_small"
        android:visibility="gone"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/rl1"
        android:layout_alignLeft="@+id/rl1"
        android:layout_alignRight="@+id/rl1"
        android:layout_alignStart="@+id/rl1"
        android:layout_below="@+id/tvProductPackaging"
        android:layout_marginTop="@dimen/activity_margin_extra_small"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvProductPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="Rs 14,599/-"
            android:textColor="@color/primary_text2"
            android:textSize="@dimen/text_size_extra_small"
        />
        <RelativeLayout
            android:id="@+id/rlButton"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:animateLayoutChanges="true"
            android:background="@drawable/button_background">
            <TextView
                android:id="@+id/tvButtonText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:paddingLeft="@dimen/activity_margin_small"
                android:paddingRight="@dimen/activity_margin_small"
                android:text="INQUIRE"
                android:textColor="@color/accent2"
                android:textSize="@dimen/text_size_small"
                android:visibility="visible"/>
            <ImageView
                android:id="@+id/ivButtonImage"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/activity_margin_large"
                android:layout_marginRight="@dimen/activity_margin_large"
                android:src="@drawable/ic_check_green"
                android:visibility="gone"/>
            <ProgressBar
                android:id="@+id/progressBarButton"
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/activity_margin"
                android:layout_marginRight="@dimen/activity_margin"
                android:paddingBottom="@dimen/activity_margin_extra_small"
                android:paddingTop="@dimen/activity_margin_extra_small"
                android:visibility="gone"/>
        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>