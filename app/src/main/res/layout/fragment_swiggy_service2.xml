<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/clMain"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="#ffffff">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:visibility="visible"
        app:elevation="0dp"
        app:layout_scrollFlags="scroll|exitUntilCollapsed">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar1"
                                           style="@style/Widget.MyApp.ActionBar"
                                           xmlns:android="http://schemas.android.com/apk/res/android"
                                           android:layout_width="match_parent"
                                           android:layout_height="match_parent"
                                           android:animateLayoutChanges="true"
                                           android:background="@color/app_background2"
                                           android:theme="@style/Base.ThemeOverlay.AppCompat.Dark"
                                           app:contentInsetEnd="0dp"
                                           app:contentInsetLeft="0dp"
                                           app:contentInsetRight="0dp"
                                           app:contentInsetStart="0dp"
                                           app:layout_collapseMode="parallax">

            <RelativeLayout
                android:id="@+id/toolbar_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvSearch"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/activity_margin"
                    android:paddingStart="@dimen/activity_margin"
                    android:text="Service Request"
                    android:textColor="@color/primary_text2"
                    android:textSize="@dimen/text_size_large"
                    android:textStyle="bold"/>
            </RelativeLayout>
        </android.support.v7.widget.Toolbar>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/text_color_grey_light2"/>
    </android.support.design.widget.AppBarLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/appBar"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <RelativeLayout
            android:id="@+id/rlMain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvServiceList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/tvAddServiceRequest"
                android:layout_alignParentTop="true"
                android:visibility="visible"/>
            <TextView
                android:id="@+id/tvAddServiceRequest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom"
                android:layout_margin="@dimen/activity_margin"
                android:background="@color/primary_text2"
                android:gravity="center"
                android:padding="@dimen/activity_margin_small"
                android:text="ADD EQIUPMENT"
                android:textColor="@color/text_color_white"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rlNoServiceAvailable"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_margin"
                android:gravity="center"
                android:text="ADD A SERVICE REQUEST"
                android:textSize="@dimen/text_size_extra_small"/>


            <ImageView
                android:id="@+id/ivNoServiceImage"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_below="@+id/tv1"
                android:layout_margin="@dimen/activity_margin"
                android:src="@drawable/ic_no_product"/>


            <TextView
                android:id="@+id/tv2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ivNoServiceImage"
                android:layout_margin="@dimen/activity_margin"
                android:gravity="center"
                android:text="OOPS! LOOK LIKEYOU HAVE NOT ADDED ANY EQUIPMENT PLEASE ADD AN EQUIPMENT TO RAISES A SERVICE REQUEST"
                android:textSize="@dimen/text_size_extra_small"/>


        </RelativeLayout>
    </RelativeLayout>
    <com.indiasupply.isdental.utils.ShimmerFrameLayout
        android:id="@+id/shimmer_view_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/rll1">

            <View
                android:id="@+id/iv1l"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginLeft="@dimen/activity_margin"
                android:layout_marginRight="@dimen/activity_margin"
                android:layout_marginTop="@dimen/activity_margin"
                android:background="@color/shimmer_bg_color"
                android:scaleType="fitXY"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv1l"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_margin"
                    android:layout_marginRight="@dimen/activity_margin"
                    android:layout_marginTop="@dimen/activity_margin"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="@dimen/activity_margin_small"
                                    android:layout_weight="1"
                                    android:background="@color/shimmer_bg_color"
                                    android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/rl1"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_centerHorizontal="true"
                            android:layout_margin="@dimen/activity_margin"></RelativeLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/rl1"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:lines="2"
                            android:maxLines="2"
                            android:padding="@dimen/activity_margin_extra_small"
                            android:textColor="@color/primary_text2"
                            android:textSize="@dimen/text_size_extra_small"/>
                    </RelativeLayout>

                    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/activity_margin_small"
                                    android:layout_weight="1"
                                    android:background="@color/shimmer_bg_color"
                                    android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/rl11"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_centerHorizontal="true"
                            android:layout_margin="@dimen/activity_margin"></RelativeLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/rl11"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:lines="2"
                            android:maxLines="2"
                            android:padding="@dimen/activity_margin_extra_small"
                            android:textColor="@color/primary_text2"
                            android:textSize="@dimen/text_size_extra_small"/>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_margin"
                    android:layout_marginRight="@dimen/activity_margin"
                    android:layout_marginTop="@dimen/activity_margin"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="@dimen/activity_margin_small"
                                    android:layout_weight="1"
                                    android:background="@color/shimmer_bg_color"
                                    android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/rl12"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_centerHorizontal="true"
                            android:layout_margin="@dimen/activity_margin"></RelativeLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/rl12"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:lines="2"
                            android:maxLines="2"
                            android:padding="@dimen/activity_margin_extra_small"
                            android:textColor="@color/primary_text2"
                            android:textSize="@dimen/text_size_extra_small"/>
                    </RelativeLayout>

                    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/activity_margin_small"
                                    android:layout_weight="1"
                                    android:background="@color/shimmer_bg_color"
                                    android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/rl111"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_centerHorizontal="true"
                            android:layout_margin="@dimen/activity_margin"></RelativeLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/rl111"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:lines="2"
                            android:maxLines="2"
                            android:padding="@dimen/activity_margin_extra_small"
                            android:textColor="@color/primary_text2"
                            android:textSize="@dimen/text_size_extra_small"/>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </com.indiasupply.isdental.utils.ShimmerFrameLayout>

</android.support.design.widget.CoordinatorLayout>